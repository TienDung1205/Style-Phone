extends ../../layouts/default
include ../../mixins/box-head.pug

block main 
    block main
        .container.my-3
            .row
                .col-12
                    h1(class="mb-4") #{product.title}

                    if(product.title)
                        div(class="form-group")
                            label(for="title") Tiêu đề
                            input(
                                type="text"
                                class="form-control"
                                id="title"
                                name="title"
                                value=product.title
                                required
                                readonly
                            )
                    
                    if(product.description)
                        div(class="form-group")
                            label(for="desc") Mô tả
                            textarea(
                                class="form-control"
                                id="desc"
                                name="description"
                                rows="5"
                                readonly
                            ) #{product.description}
                    
                    if(product.price)
                        div(class="form-group")
                            label(for="price") Giá
                            input(
                                type="number"
                                class="form-control"
                                id="price"
                                name="price"
                                value=product.price
                                min="0"
                                readonly
                            )
                    
                    if(product.discountPercentage)
                        div(class="form-group")
                            label(for="discount") % Giảm giá
                            input(
                                type="number"
                                class="form-control"
                                id="discount"
                                name="discountPercentage"
                                value=product.discountPercentage
                                min="0"
                                readonly
                            )
                    if(product.stock)
                        div(class="form-group")
                            label(for="stock") Số lượng
                            input(
                                type="number"
                                class="form-control"
                                id="stock"
                                name="stock"
                                value=product.stock
                                min="0"
                                readonly
                            )
                    
                    div(
                        class="form-group"
                        upload-image
                    )
                        label(for="thumbnail") Ảnh
                        br
                        img(
                            src=product.thumbnail
                            upload-image-preview
                            class="image-preview"
                        )
